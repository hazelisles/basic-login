<div class="container">
  <div class="col-8 col-md-6 col-lg-5 mx-auto my-5">
    <div class="card bg-light">
      <div class="card-body">
        <form action="/login" method="post" class="row row-cols-1">
          <div class="col-10 mx-auto my-3" style="text-align: center;">
            <h3 class="card-title">Account Login</h3>
          </div>
          <div class="col-10 my-3 mx-auto">
            <input class="form-control" type="email" name="email" id="email" placeholder="Email">
          </div>
          <div class="col-10 my-3 mx-auto">
            <input class="form-control" type="password" name="password" id="password" placeholder="Password">
          </div>
          {{#unless result.status}}
          <div class="col-10 invalid-message mx-auto">
            帳號不存在或帳號密碼錯誤！
          </div>
          {{/unless}}
          <button class="col-4 btn btn-dark mx-auto my-3" type="submit">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>