<div class="container">
  <div></div>
  <div class="col-8 col-md-6 col-lg-5 mx-auto my-5">
    <div class="card bg-light">
      <div class="card-body">
        <form action="/" method="post" class="row row-cols-1">
          <div class="col-10 mx-auto my-3" style="text-align: center;">
            <h3 class="card-title">Account Login</h3>
          </div>
          <div class="col-10 my-3 mx-auto">
            <input class="form-control" type="email" name="id" id="id" placeholder="Email">
          </div>
          <div class="col-10 my-3 mx-auto">
            <input class="form-control" type="password" name="pass" id="pass" placeholder="Password">
          </div>
          <button class="col-4 btn btn-dark mx-auto my-3" type="submit">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>